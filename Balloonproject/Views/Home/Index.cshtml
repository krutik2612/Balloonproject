﻿@{
    ViewData["Title"] = "Balloonproject";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Beautiful Page Example</title>
    <style>
        body {
            background-image: url('https://cdn.wallpapersafari.com/44/3/VIJUv7.jpg');
            background-size: cover; /* Cover the entire page */
            background-position: center; /* Center the image */
            background-repeat: no-repeat; /* Prevent repeating */
            margin: 0;
            padding: 0;
            font-family: 'Arial', sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f4f4f9;
            color: #333;
        }

        h2 {
            text-align: center;
            font-size: 2.5em;
            color: #FED8B1;
            margin-top: 50px;
            margin-bottom: 20px;
        }

        p {
            text-align: center;
            font-size: 1.2em;
            color: #006400;
            max-width: 600px;
            margin: 0 auto;
            line-height: 1.6;
        }

        .container {
            padding: 10px;
            text-align: center;
        }

        .box {
            background: #FFD801;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            padding: 80px;
            margin: 80px auto;
            max-width: 800px;
        }
    </style>
</head>

</html>